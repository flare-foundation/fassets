{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "ts-compile-watch",
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"revealProblems": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "ESLint",
			"type": "npm",
			"script": "eslint",
			"problemMatcher": ["$eslint-stylish"],
			"presentation": {
				"reveal": "always",
				"revealProblems": "never"
			}
		}
	]
}
